    "prepublish": "npm test && npm run build",
    "postpublish": "git push origin master --follow-tags"
  },
  "keywords": [
    "furhat-core"
  ],
  "dependencies": {},
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.15.1",
